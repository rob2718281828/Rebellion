<layout id="MainLayout">
    <!--<bitmap id="id_monkey" x="center" y="center" filename="../drawables/monkey.png" />-->
    <label id="TimeLabel" x="center" y="0" font="Graphics.FONT_MEDIUM" justification="Graphics.TEXT_JUSTIFY_CENTER" color="Graphics.COLOR_LT_GRAY" />
    <label id="BandLabel1" x="center" y="50" font="Graphics.FONT_SMALL" justification="Graphics.TEXT_JUSTIFY_CENTER" color="Graphics.COLOR_WHITE" />
    <label id="BandLabel2" x="center" y="130" font="Graphics.FONT_SMALL" justification="Graphics.TEXT_JUSTIFY_CENTER" color="Graphics.COLOR_LT_GRAY" />
    <label id="DateLabel" x="center" y="200" font="Graphics.FONT_MEDIUM" justification="Graphics.TEXT_JUSTIFY_CENTER" color="Graphics.COLOR_LT_GRAY" />
    <button x="120" y="center" width="120" height="60">
    	<param name="background">Gfx.COLOR_RED</param>
    	<param name="behavior">onNextBand</param>
    </button>
	<button x="0" y="center" width="120" height="60">
    	<param name="background">Gfx.COLOR_WHITE</param>
    	<param name="behavior">onPrevBand</param>
    </button>
	<button x="center" y="180" width="200" height="60">
    	<param name="background">Gfx.COLOR_RED</param>
    	<param name="behavior">onNextDay</param>
    </button>
	<button x="center" y="0" width="200" height="60">
    	<param name="background">Gfx.COLOR_RED</param>
    	<param name="behavior">onPrevDay</param>
    </button>    
</layout>